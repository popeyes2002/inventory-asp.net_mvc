        </div>
    </div>
</footer>


@code {
    private List<Food>? foods;
    private List<CartItem> cart = new();

    protected override async Task OnInitializedAsync()
    {
        foods = await Http.GetFromJsonAsync<List<Food>>("api/Food");
    }

    private void AddToCart(Food food)
    {
        var existing = cart.FirstOrDefault(c => c.Food.Id == food.Id);
        if (existing != null)
        {
            existing.Quantity++;
        }
        else
        {
            cart.Add(new CartItem { Food = food, Quantity = 1 });
        }
    }

    private void RemoveFromCart(Food food)
    {
        var existing = cart.FirstOrDefault(c => c.Food.Id == food.Id);
        if (existing != null)
        {
            existing.Quantity--;
            if (existing.Quantity <= 0)
            {
                cart.Remove(existing);
            }
        }
    }

    private double Subtotal => cart.Sum(c => c.Food.Price * c.Quantity);
    private double Tax => Math.Round(Subtotal * 0.05, 2);
    private double Total => Math.Round(Subtotal + Tax, 2);

    public class CartItem
    {
        public Food Food { get; set; } = default!;
        public int Quantity { get; set; }
    }
}
